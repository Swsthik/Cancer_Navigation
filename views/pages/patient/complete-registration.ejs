<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MedConnect - Complete Registration</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-blue: #2a5c82;
        --secondary-blue: #5c9baf;
        --accent-teal: #4ecdc4;
      }

      body {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
      }

      .medical-header {
        background: var(--primary-blue);
        padding: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .registration-container {
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        margin-top: 2rem;
        margin-bottom: 2rem;
      }

      .btn-medical {
        background: var(--accent-teal);
        color: white;
        padding: 12px 30px;
        transition: all 0.3s ease;
      }

      .btn-medical:hover {
        background: var(--secondary-blue);
        transform: translateY(-2px);
      }

      .btn-outline-medical {
        color: var(--accent-teal);
        border: 1px solid var(--accent-teal);
        transition: all 0.3s ease;
      }

      .btn-outline-medical:hover {
        background: var(--accent-teal);
        color: white;
      }

      .form-control,
      .form-select {
        border-radius: 10px;
        padding: 0.75rem 1rem;
        border: 1px solid #e2e8f0;
      }

      .form-control:focus,
      .form-select:focus {
        border-color: var(--accent-teal);
        box-shadow: 0 0 0 0.25rem rgba(78, 205, 196, 0.25);
      }

      .step-indicator {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
        position: relative;
      }

      .step-indicator::before {
        content: "";
        position: absolute;
        top: 15px;
        left: 0;
        right: 0;
        height: 2px;
        background-color: #e2e8f0;
        z-index: 1;
      }

      .step {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .step-circle {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: white;
        border: 2px solid #e2e8f0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 8px;
      }

      .step.active .step-circle {
        background-color: var(--accent-teal);
        border-color: var(--accent-teal);
        color: white;
      }

      .step.completed .step-circle {
        background-color: var(--accent-teal);
        border-color: var (--accent-teal);
        color: white;
      }

      .step-title {
        font-size: 12px;
        color: #1e293b;
        font-weight: 500;
      }

      .step-content {
        display: none;
      }

      .step-content.active {
        display: block;
      }

      .loader-container {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.8);
        z-index: 9999;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }

      .spinner-border {
        width: 3rem;
        height: 3rem;
        color: var(--accent-teal);
      }

      .decorative-wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 150px;
        background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg"><path fill="%232A5C82" fill-opacity="0.1" d="M0,160L48,170.7C96,181,192,203,288,186.7C384,171,480,117,576,101.3C672,85,768,107,864,138.7C960,171,1056,213,1152,208C1248,203,1344,149,1392,122.7L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
      }
    </style>
  </head>
  <body>
    <!-- Loading Spinner -->
    <div class="loader-container" id="loaderContainer">
      <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <p class="mt-3 fw-bold">Creating your patient profile...</p>
    </div>

    <nav class="navbar medical-header">
      <div class="container">
        <a class="navbar-brand text-white" href="/patient/dashboard">
          <i class="fas fa-hospital me-2"></i>MedConnect
        </a>
        <div>
          <a href="/patient/dashboard" class="btn btn-outline-light">
            <i class="fas fa-home me-2"></i>Home
          </a>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="registration-container p-4 p-md-5">
        <div class="text-center mb-4">
          <h2 class="mb-2" style="color: var(--primary-blue)">
            Complete Your Registration
          </h2>
          <p class="text-muted">
            Please provide additional information to complete your patient
            profile
          </p>
        </div>

        <div class="alert alert-info d-flex align-items-center" role="alert">
          <i class="fas fa-info-circle fs-5 me-3"></i>
          <div>
            Complete all required fields to create your comprehensive patient
            profile.
          </div>
        </div>

        <!-- Step Indicator -->
        <div class="step-indicator">
          <div class="step active" data-step="1">
            <div class="step-circle">1</div>
            <div class="step-title">Personal Info</div>
          </div>
          <div class="step" data-step="2">
            <div class="step-circle">2</div>
            <div class="step-title">Contact Details</div>
          </div>
          <div class="step" data-step="3">
            <div class="step-circle">3</div>
            <div class="step-title">Medical History</div>
          </div>
          <div class="step" data-step="4">
            <div class="step-circle">4</div>
            <div class="step-title">Review</div>
          </div>
        </div>

        <form id="completeRegistrationForm">
          <!-- Step 1: Personal Information -->
          <div class="step-content active" data-step="1">
            <h5 class="mb-4" style="color: var(--primary-blue)">
              Personal Information
            </h5>

            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <label for="firstName" class="form-label">First Name*</label>
                <input
                  type="text"
                  class="form-control"
                  id="firstName"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="lastName" class="form-label">Last Name*</label>
                <input
                  type="text"
                  class="form-control"
                  id="lastName"
                  required
                />
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-4 mb-3 mb-md-0">
                <label for="birthDate" class="form-label">Date of Birth*</label>
                <input
                  type="date"
                  class="form-control"
                  id="birthDate"
                  required
                />
              </div>
              <div class="col-md-4 mb-3 mb-md-0">
                <label for="gender" class="form-label">Gender*</label>
                <select class="form-select" id="gender" required>
                  <option value="" selected disabled>Select gender</option>
                  <option value="male">Male</option>
                  <option value="female">Female</option>
                  <option value="other">Other</option>
                  <option value="unknown">Unknown</option>
                </select>
              </div>
              <div class="col-md-4">
                <label for="birthSex" class="form-label">Birth Sex*</label>
                <select class="form-select" id="birthSex" required>
                  <option value="" selected disabled>Select birth sex</option>
                  <option value="M">Male</option>
                  <option value="F">Female</option>
                  <option value="UNK">Unknown</option>
                </select>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <label for="race" class="form-label">Race</label>
                <select class="form-select" id="race">
                  <option value="" selected>Select race</option>
                  <option value="1002-5">
                    American Indian or Alaska Native
                  </option>
                  <option value="2028-9">Asian</option>
                  <option value="2054-5">Black or African American</option>
                  <option value="2076-8">
                    Native Hawaiian or Other Pacific Islander
                  </option>
                  <option value="2106-3">White</option>
                  <option value="UNK">Unknown</option>
                </select>
              </div>
              <div class="col-md-6">
                <label for="ethnicity" class="form-label">Ethnicity</label>
                <select class="form-select" id="ethnicity">
                  <option value="" selected>Select ethnicity</option>
                  <option value="2135-2">Hispanic or Latino</option>
                  <option value="2186-5">Not Hispanic or Latino</option>
                  <option value="UNK">Unknown</option>
                </select>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <label for="maritalStatus" class="form-label"
                  >Marital Status</label
                >
                <select class="form-select" id="maritalStatus">
                  <option value="" selected>Select marital status</option>
                  <option value="S">Single</option>
                  <option value="M">Married</option>
                  <option value="D">Divorced</option>
                  <option value="W">Widowed</option>
                  <option value="UNK">Unknown</option>
                </select>
              </div>
              <div class="col-md-6">
                <label for="preferredLanguage" class="form-label"
                  >Preferred Language</label
                >
                <select class="form-select" id="preferredLanguage">
                  <option value="" selected>Select language</option>
                  <option value="en">English</option>
                  <option value="es">Spanish</option>
                  <option value="fr">French</option>
                  <option value="zh">Chinese</option>
                  <option value="ar">Arabic</option>
                  <option value="other">Other</option>
                </select>
              </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
              <button
                type="button"
                class="btn btn-medical"
                onclick="nextStep(1)"
              >
                Next
              </button>
            </div>
          </div>

          <!-- Step 2: Contact Details -->
          <div class="step-content" data-step="2">
            <h5 class="mb-4" style="color: var(--primary-blue)">
              Contact Details
            </h5>

            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <label for="mobileNumber" class="form-label"
                  >Mobile Number*</label
                >
                <input
                  type="tel"
                  class="form-control"
                  id="mobileNumber"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" />
              </div>
            </div>

            <div class="mb-3">
              <label for="addressLine1" class="form-label"
                >Address Line 1*</label
              >
              <input
                type="text"
                class="form-control"
                id="addressLine1"
                required
              />
            </div>

            <div class="mb-3">
              <label for="addressLine2" class="form-label"
                >Address Line 2</label
              >
              <input type="text" class="form-control" id="addressLine2" />
            </div>

            <div class="row mb-3">
              <div class="col-md-4 mb-3 mb-md-0">
                <label for="city" class="form-label">City*</label>
                <input type="text" class="form-control" id="city" required />
              </div>
              <div class="col-md-4 mb-3 mb-md-0">
                <label for="state" class="form-label">State/Province*</label>
                <input type="text" class="form-control" id="state" required />
              </div>
              <div class="col-md-4">
                <label for="postalCode" class="form-label">Postal Code*</label>
                <input
                  type="text"
                  class="form-control"
                  id="postalCode"
                  required
                />
              </div>
            </div>

            <div class="mb-3">
              <label for="country" class="form-label">Country*</label>
              <select class="form-select" id="country" required>
                <option value="" selected disabled>Select country</option>
                <option value="US">United States</option>
                <option value="CA">Canada</option>
                <option value="UK">United Kingdom</option>
                <option value="AU">Australia</option>
                <option value="IN">India</option>
                <option value="other">Other</option>
              </select>
            </div>

            <h6 class="mt-4 mb-3" style="color: var(--primary-blue)">
              Emergency Contact
            </h6>

            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <label for="emergencyContactName" class="form-label"
                  >Contact Name*</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="emergencyContactName"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="emergencyContactRelation" class="form-label"
                  >Relationship*</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="emergencyContactRelation"
                  required
                />
              </div>
            </div>

            <div class="mb-3">
              <label for="emergencyContactPhone" class="form-label"
                >Contact Phone*</label
              >
              <input
                type="tel"
                class="form-control"
                id="emergencyContactPhone"
                required
              />
            </div>

            <div class="d-flex justify-content-between mt-4">
              <button
                type="button"
                class="btn btn-outline-secondary"
                onclick="prevStep(2)"
              >
                Previous
              </button>
              <button
                type="button"
                class="btn btn-medical"
                onclick="nextStep(2)"
              >
                Next
              </button>
            </div>
          </div>

          <!-- Step 3: Medical History -->
          <div class="step-content" data-step="3">
            <h5 class="mb-4" style="color: var(--primary-blue)">
              Medical History
            </h5>

            <div class="mb-3">
              <label class="form-label">Do you have any allergies?*</label>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="allergies"
                  id="allergiesYes"
                  value="yes"
                />
                <label class="form-check-label" for="allergiesYes">Yes</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="allergies"
                  id="allergiesNo"
                  value="no"
                  checked
                />
                <label class="form-check-label" for="allergiesNo">No</label>
              </div>
            </div>

            <div class="mb-3" id="allergiesDetails" style="display: none">
              <label for="allergiesList" class="form-label"
                >Please list your allergies</label
              >
              <textarea
                class="form-control"
                id="allergiesList"
                rows="2"
              ></textarea>
            </div>

            <div class="mb-3">
              <label class="form-label"
                >Do you have any chronic medical conditions?*</label
              >
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="conditions"
                  id="conditionsYes"
                  value="yes"
                />
                <label class="form-check-label" for="conditionsYes">Yes</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="conditions"
                  id="conditionsNo"
                  value="no"
                  checked
                />
                <label class="form-check-label" for="conditionsNo">No</label>
              </div>
            </div>

            <div class="mb-3" id="conditionsDetails" style="display: none">
              <label for="conditionsList" class="form-label"
                >Please list your medical conditions</label
              >
              <textarea
                class="form-control"
                id="conditionsList"
                rows="2"
              ></textarea>
            </div>

            <div class="mb-3">
              <label class="form-label"
                >Are you currently taking any medications?*</label
              >
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="medications"
                  id="medicationsYes"
                  value="yes"
                />
                <label class="form-check-label" for="medicationsYes">Yes</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="medications"
                  id="medicationsNo"
                  value="no"
                  checked
                />
                <label class="form-check-label" for="medicationsNo">No</label>
              </div>
            </div>

            <div class="mb-3" id="medicationsDetails" style="display: none">
              <label for="medicationsList" class="form-label"
                >Please list your medications</label
              >
              <textarea
                class="form-control"
                id="medicationsList"
                rows="2"
              ></textarea>
            </div>

            <div class="mb-3">
              <label class="form-label">Family History of Cancer?*</label>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="familyCancer"
                  id="familyCancerYes"
                  value="yes"
                />
                <label class="form-check-label" for="familyCancerYes"
                  >Yes</label
                >
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="familyCancer"
                  id="familyCancerNo"
                  value="no"
                  checked
                />
                <label class="form-check-label" for="familyCancerNo">No</label>
              </div>
            </div>

            <div class="mb-3" id="familyCancerDetails" style="display: none">
              <label for="familyCancerList" class="form-label"
                >Please provide details</label
              >
              <textarea
                class="form-control"
                id="familyCancerList"
                rows="2"
              ></textarea>
            </div>

            <div class="mb-3">
              <label for="previousTreatments" class="form-label"
                >Previous Cancer Treatments (if any)</label
              >
              <textarea
                class="form-control"
                id="previousTreatments"
                rows="3"
              ></textarea>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <button
                type="button"
                class="btn btn-outline-secondary"
                onclick="prevStep(3)"
              >
                Previous
              </button>
              <button
                type="button"
                class="btn btn-medical"
                onclick="nextStep(3)"
              >
                Next
              </button>
            </div>
          </div>

          <!-- Step 4: Review -->
          <div class="step-content" data-step="4">
            <h5 class="mb-4" style="color: var(--primary-blue)">
              Review Your Information
            </h5>

            <div
              class="alert alert-warning d-flex align-items-center"
              role="alert"
            >
              <i class="fas fa-exclamation-triangle fs-5 me-3"></i>
              <div>
                Please review your information carefully before submitting.
              </div>
            </div>

            <div class="card card-medical mb-3">
              <div class="card-header bg-light">
                <h6 class="mb-0">Personal Information</h6>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6 mb-2">
                    <strong>Name:</strong> <span id="reviewName"></span>
                  </div>
                  <div class="col-md-6 mb-2">
                    <strong>Date of Birth:</strong> <span id="reviewDOB"></span>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6 mb-2">
                    <strong>Gender:</strong> <span id="reviewGender"></span>
                  </div>
                  <div class="col-md-6 mb-2">
                    <strong>Birth Sex:</strong>
                    <span id="reviewBirthSex"></span>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6 mb-2">
                    <strong>Race:</strong> <span id="reviewRace"></span>
                  </div>
                  <div class="col-md-6 mb-2">
                    <strong>Ethnicity:</strong>
                    <span id="reviewEthnicity"></span>
                  </div>
                </div>
              </div>
            </div>

            <div class="card card-medical mb-3">
              <div class="card-header bg-light">
                <h6 class="mb-0">Contact Information</h6>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6 mb-2">
                    <strong>Mobile:</strong> <span id="reviewMobile"></span>
                  </div>
                  <div class="col-md-6 mb-2">
                    <strong>Email:</strong> <span id="reviewEmail"></span>
                  </div>
                </div>
                <div class="mb-2">
                  <strong>Address:</strong> <span id="reviewAddress"></span>
                </div>
                <div class="mb-2">
                  <strong>Emergency Contact:</strong>
                  <span id="reviewEmergencyContact"></span>
                </div>
              </div>
            </div>

            <div class="card card-medical mb-3">
              <div class="card-header bg-light">
                <h6 class="mb-0">Medical Information</h6>
              </div>
              <div class="card-body">
                <div class="mb-2">
                  <strong>Allergies:</strong> <span id="reviewAllergies"></span>
                </div>
                <div class="mb-2">
                  <strong>Medical Conditions:</strong>
                  <span id="reviewConditions"></span>
                </div>
                <div class="mb-2">
                  <strong>Medications:</strong>
                  <span id="reviewMedications"></span>
                </div>
                <div class="mb-2">
                  <strong>Family History of Cancer:</strong>
                  <span id="reviewFamilyCancer"></span>
                </div>
              </div>
            </div>

            <div class="form-check mb-4">
              <input
                class="form-check-input"
                type="checkbox"
                id="confirmAccurate"
                required
              />
              <label class="form-check-label" for="confirmAccurate">
                I confirm that the information provided is accurate and complete
                to the best of my knowledge.
              </label>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <button
                type="button"
                class="btn btn-outline-secondary"
                onclick="prevStep(4)"
              >
                Previous
              </button>
              <button type="submit" class="btn btn-medical">
                Submit Registration
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="decorative-wave"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      // Retrieve patient data from localStorage
      let patientData = localStorage.getItem("patientResource");
      let patient = patientData ? JSON.parse(patientData) : null;

      // Pre-fill form with data from initial registration if available
      document.addEventListener("DOMContentLoaded", function () {
        if (patient) {
          document.getElementById("firstName").value =
            patient.name[0].given[0] || "";
          document.getElementById("lastName").value =
            patient.name[0].family || "";
          document.getElementById("gender").value = patient.gender || "";

          const phone = patient.telecom.find((t) => t.system === "phone");
          if (phone) {
            document.getElementById("mobileNumber").value = phone.value;
          }

          const email = patient.telecom.find((t) => t.system === "email");
          if (email) {
            document.getElementById("email").value = email.value;
          }
        }
      });

      // Step navigation
      function nextStep(currentStep) {
        // Validate current step and check gender selection

        if (!validateStep(currentStep)) {
          return;
        }

        // Hide current step
        document
          .querySelector(`.step-content[data-step="${currentStep}"]`)
          .classList.remove("active");

        // Show next step
        document
          .querySelector(`.step-content[data-step="${currentStep + 1}"]`)
          .classList.add("active");

        // Update step indicator
        document
          .querySelector(`.step[data-step="${currentStep}"]`)
          .classList.add("completed");
        document
          .querySelector(`.step[data-step="${currentStep}"]`)
          .classList.remove("active");
        document
          .querySelector(`.step[data-step="${currentStep + 1}"]`)
          .classList.add("active");

        // If moving to review step, populate review data
        if (currentStep + 1 === 4) {
          populateReviewData();
        }
      }

      function prevStep(currentStep) {
        // Hide current step
        document
          .querySelector(`.step-content[data-step="${currentStep}"]`)
          .classList.remove("active");

        // Show previous step
        document
          .querySelector(`.step-content[data-step="${currentStep - 1}"]`)
          .classList.add("active");

        // Update step indicator
        document
          .querySelector(`.step[data-step="${currentStep}"]`)
          .classList.remove("active");
        document
          .querySelector(`.step[data-step="${currentStep - 1}"]`)
          .classList.add("active");
        document
          .querySelector(`.step[data-step="${currentStep - 1}"]`)
          .classList.remove("completed");
      }

      function validateStep(step) {
        // Basic validation for required fields
        const stepContent = document.querySelector(
          `.step-content[data-step="${step}"]`
        );
        const requiredFields = stepContent.querySelectorAll("[required]");

        let isValid = true;

        requiredFields.forEach((field) => {
          // Check if gender is selected
          if (field.id === "gender" && !field.value) {
            field.classList.add("is-invalid");
            isValid = false;
          }

          if (!field.value && field.id !== "gender") {
            field.classList.add("is-invalid");
            isValid = false;
          } else {
            field.classList.remove("is-invalid");
          }
        });

        if (!isValid) {
          Swal.fire({
            icon: "warning",
            title: "Missing Information",
            text: "Please fill in all required fields.",
            confirmButtonColor: "#4ecdc4",
          });
        }

        return isValid;
      }

      // Toggle conditional fields
      document.querySelectorAll('input[name="allergies"]').forEach((radio) => {
        radio.addEventListener("change", function () {
          document.getElementById("allergiesDetails").style.display =
            this.value === "yes" ? "block" : "none";
        });
      });

      document.querySelectorAll('input[name="conditions"]').forEach((radio) => {
        radio.addEventListener("change", function () {
          document.getElementById("conditionsDetails").style.display =
            this.value === "yes" ? "block" : "none";
        });
      });

      document
        .querySelectorAll('input[name="medications"]')
        .forEach((radio) => {
          radio.addEventListener("change", function () {
            document.getElementById("medicationsDetails").style.display =
              this.value === "yes" ? "block" : "none";
          });
        });

      document
        .querySelectorAll('input[name="familyCancer"]')
        .forEach((radio) => {
          radio.addEventListener("change", function () {
            document.getElementById("familyCancerDetails").style.display =
              this.value === "yes" ? "block" : "none";
          });
        });

      // Populate review data
      function populateReviewData() {
        // Personal info
        document.getElementById("reviewName").textContent = `${
          document.getElementById("firstName").value
        } ${document.getElementById("lastName").value}`;
        document.getElementById("reviewDOB").textContent =
          document.getElementById("birthDate").value;

        const genderSelect = document.getElementById("gender");
        document.getElementById("reviewGender").textContent =
          genderSelect.options[genderSelect.selectedIndex].text;

        const birthSexSelect = document.getElementById("birthSex");
        document.getElementById("reviewBirthSex").textContent =
          birthSexSelect.options[birthSexSelect.selectedIndex].text;

        const raceSelect = document.getElementById("race");
        document.getElementById("reviewRace").textContent =
          raceSelect.selectedIndex > 0
            ? raceSelect.options[raceSelect.selectedIndex].text
            : "Not specified";

        const ethnicitySelect = document.getElementById("ethnicity");
        document.getElementById("reviewEthnicity").textContent =
          ethnicitySelect.selectedIndex > 0
            ? ethnicitySelect.options[ethnicitySelect.selectedIndex].text
            : "Not specified";

        // Contact info
        document.getElementById("reviewMobile").textContent =
          document.getElementById("mobileNumber").value;
        document.getElementById("reviewEmail").textContent =
          document.getElementById("email").value || "Not provided";

        const addressLine2 = document.getElementById("addressLine2").value
          ? `, ${document.getElementById("addressLine2").value}`
          : "";
        document.getElementById("reviewAddress").textContent = `${
          document.getElementById("addressLine1").value
        }${addressLine2}, ${document.getElementById("city").value}, ${
          document.getElementById("state").value
        } ${document.getElementById("postalCode").value}, ${
          document.getElementById("country").value
        }`;

        document.getElementById("reviewEmergencyContact").textContent = `${
          document.getElementById("emergencyContactName").value
        } (${document.getElementById("emergencyContactRelation").value}) - ${
          document.getElementById("emergencyContactPhone").value
        }`;

        // Medical info
        const allergiesValue = document.querySelector(
          'input[name="allergies"]:checked'
        ).value;
        document.getElementById("reviewAllergies").textContent =
          allergiesValue === "yes"
            ? document.getElementById("allergiesList").value
            : "None";

        const conditionsValue = document.querySelector(
          'input[name="conditions"]:checked'
        ).value;
        document.getElementById("reviewConditions").textContent =
          conditionsValue === "yes"
            ? document.getElementById("conditionsList").value
            : "None";

        const medicationsValue = document.querySelector(
          'input[name="medications"]:checked'
        ).value;
        document.getElementById("reviewMedications").textContent =
          medicationsValue === "yes"
            ? document.getElementById("medicationsList").value
            : "None";

        const familyCancerValue = document.querySelector(
          'input[name="familyCancer"]:checked'
        ).value;
        document.getElementById("reviewFamilyCancer").textContent =
          familyCancerValue === "yes"
            ? document.getElementById("familyCancerList").value
            : "None";
      }

      // Form submission
      document
        .getElementById("completeRegistrationForm")
        .addEventListener("submit", function (e) {
          e.preventDefault();

          if (!document.getElementById("confirmAccurate").checked) {
            Swal.fire({
              icon: "warning",
              title: "Confirmation Required",
              text: "Please confirm that the information is accurate before submitting.",
              confirmButtonColor: "#4ecdc4",
            });
            return;
          }

          // Show loading spinner
          document.getElementById("loaderContainer").style.display = "flex";

          // Create FHIR Patient resource
          const patientResource = {
            resourceType: "Patient",
            meta: {
              profile: [
                "http://hl7.org/fhir/us/mcode/StructureDefinition/mcode-cancer-patient",
              ],
            },
            identifier: [
              {
                system: "http://hospital.sample/system/id",
                value: patient ? patient.identifier[0].value : generateMRN(),
              },
            ],
            name: [
              {
                family: document.getElementById("lastName").value,
                given: [document.getElementById("firstName").value],
              },
            ],
            gender: document.getElementById("gender").value,
            birthDate: document.getElementById("birthDate").value,
            deceasedBoolean: false,
            address: [
              {
                line: [
                  document.getElementById("addressLine1").value,
                  document.getElementById("addressLine2").value,
                ].filter(Boolean),
                city: document.getElementById("city").value,
                state: document.getElementById("state").value,
                postalCode: document.getElementById("postalCode").value,
                country: document.getElementById("country").value,
              },
            ],
            telecom: [
              {
                system: "phone",
                value: document.getElementById("mobileNumber").value,
              },
            ],
            _extension: [
              {
                url: "http://hl7.org/fhir/us/core/StructureDefinition/us-core-race",
                valueCodeableConcept: {
                  coding: [
                    {
                      system: "urn:oid:2.16.840.1.113883.6.238",
                      code: document.getElementById("race").value || "UNK",
                      display:
                        document.getElementById("race").selectedIndex > 0
                          ? document.getElementById("race").options[
                              document.getElementById("race").selectedIndex
                            ].text
                          : "Unknown",
                    },
                  ],
                },
              },
              {
                url: "http://hl7.org/fhir/us/core/StructureDefinition/us-core-ethnicity",
                valueCodeableConcept: {
                  coding: [
                    {
                      system: "urn:oid:2.16.840.1.113883.6.238",
                      code: document.getElementById("ethnicity").value || "UNK",
                      display:
                        document.getElementById("ethnicity").selectedIndex > 0
                          ? document.getElementById("ethnicity").options[
                              document.getElementById("ethnicity").selectedIndex
                            ].text
                          : "Unknown",
                    },
                  ],
                },
              },
              {
                url: "http://hl7.org/fhir/us/core/StructureDefinition/us-core-birthsex",
                valueCode: document.getElementById("birthSex").value || "UNK",
              },
            ],
          };

          // Add email if provided
          if (document.getElementById("email").value) {
            patientResource.telecom.push({
              system: "email",
              value: document.getElementById("email").value,
            });
          }

          // Add marital status if provided
          if (document.getElementById("maritalStatus").value) {
            patientResource.maritalStatus = {
              coding: [
                {
                  system:
                    "http://terminology.hl7.org/CodeSystem/v3-MaritalStatus",
                  code: document.getElementById("maritalStatus").value,
                },
              ],
            };
          }

          // Add language if provided
          if (document.getElementById("preferredLanguage").value) {
            patientResource.communication = [
              {
                language: {
                  coding: [
                    {
                      system: "urn:ietf:bcp:47",
                      code: document.getElementById("preferredLanguage").value,
                    },
                  ],
                },
                preferred: true,
              },
            ];
          }

          // Add contact information
          patientResource.contact = [
            {
              relationship: [
                {
                  coding: [
                    {
                      system: "http://terminology.hl7.org/CodeSystem/v2-0131",
                      code: "C",
                    },
                  ],
                  text: document.getElementById("emergencyContactRelation")
                    .value,
                },
              ],
              name: {
                text: document.getElementById("emergencyContactName").value,
              },
              telecom: [
                {
                  system: "phone",
                  value: document.getElementById("emergencyContactPhone").value,
                },
              ],
            },
          ];

          // Create medical history extension
          const medicalHistoryExtension = [];

          // Add allergies
          if (
            document.querySelector('input[name="allergies"]:checked').value ===
            "yes"
          ) {
            medicalHistoryExtension.push({
              url: "http://example.org/fhir/StructureDefinition/patient-allergies",
              valueString: document.getElementById("allergiesList").value,
            });
          }

          // Add conditions
          if (
            document.querySelector('input[name="conditions"]:checked').value ===
            "yes"
          ) {
            medicalHistoryExtension.push({
              url: "http://example.org/fhir/StructureDefinition/patient-conditions",
              valueString: document.getElementById("conditionsList").value,
            });
          }

          // Add medications
          if (
            document.querySelector('input[name="medications"]:checked')
              .value === "yes"
          ) {
            medicalHistoryExtension.push({
              url: "http://example.org/fhir/StructureDefinition/patient-medications",
              valueString: document.getElementById("medicationsList").value,
            });
          }

          // Add family history of cancer
          if (
            document.querySelector('input[name="familyCancer"]:checked')
              .value === "yes"
          ) {
            medicalHistoryExtension.push({
              url: "http://example.org/fhir/StructureDefinition/family-cancer-history",
              valueString: document.getElementById("familyCancerList").value,
            });
          }

          // Add previous treatments if provided
          if (document.getElementById("previousTreatments").value) {
            medicalHistoryExtension.push({
              url: "http://example.org/fhir/StructureDefinition/previous-cancer-treatments",
              valueString: document.getElementById("previousTreatments").value,
            });
          }

          // Add extension to patient resource if any medical history is provided
          if (medicalHistoryExtension.length > 0) {
            patientResource.extension = medicalHistoryExtension;
          }

          // Store the patient resource for later use
          localStorage.setItem(
            "patientResource",
            JSON.stringify(patientResource)
          );

          // Simulate sending data to server
          setTimeout(() => {
            // Hide loading spinner
            document.getElementById("loaderContainer").style.display = "none";

            // Show success message
            Swal.fire({
              icon: "success",
              title: "Registration Complete!",
              text: "Your patient profile has been successfully created.",
              confirmButtonColor: "#4ecdc4",
            }).then((result) => {
              // Redirect to dashboard after confirmation
              window.location.href = "/patient/dashboard";
            });
          }, 2000);
        });

      // Helper function to generate MRN
      function generateMRN() {
        return (
          "MRN" +
          Math.floor(Math.random() * 10000000)
            .toString()
            .padStart(7, "0")
        );
      }
    </script>
