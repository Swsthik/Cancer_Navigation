<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CanConnect - Complete Registration</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-blue: #2a5c82;
        --secondary-blue: #5c9baf;
        --accent-teal: #4ecdc4;
      }

      body {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        overflow-x: hidden;
      }

      .sidebar {
        background: var(--primary-blue);
        color: white;
        min-height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        width: 280px;
        padding: 1.5rem;
        z-index: 1000;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      }

      .sidebar-header {
        padding: 1rem 0;
        margin-bottom: 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .sidebar-header h4 {
        color: white;
        font-weight: 600;
        margin: 0;
        font-size: 1.25rem;
      }

      .nav-link {
        color: rgba(255, 255, 255, 0.8);
        padding: 0.75rem 1rem;
        margin: 0.2rem 0;
        border-radius: 5px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        font-size: 0.95rem;
      }

      .nav-link:hover {
        color: white;
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
      }

      .nav-link.active {
        color: white;
        background: var(--accent-teal);
        font-weight: 500;
      }

      .nav-link i {
        width: 20px;
        margin-right: 10px;
        font-size: 1.1rem;
      }

      .main-content {
        margin-left: 280px;
        padding: 2rem;
        min-height: 100vh;
        width: calc(100% - 280px);
      }

      .card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        border: none;
        width: 100%;
      }

      .card-header {
        background: var(--primary-blue);
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
      }

      .card-body {
        padding: 2rem;
      }

      .step-indicator {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2rem;
      }

      .step {
        text-align: left;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 10px;
        position: relative;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.3s ease;
        width: 100%;
      }

      .step.active {
        background: var(--accent-teal);
        color: white;
      }

      .step.completed {
        background: var(--secondary-blue);
        color: white;
      }

      .form-step {
        display: none;
        animation: fadeIn 0.3s ease;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .form-step.active {
        display: block;
      }

      .form-label {
        font-weight: 500;
        color: var(--primary-blue);
        margin-bottom: 0.5rem;
      }

      .form-control, .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
        width: 100%;
      }

      .form-control:focus, .form-select:focus {
        border-color: var(--accent-teal);
        box-shadow: 0 0 0 0.2rem rgba(78, 205, 196, 0.25);
      }

      .btn-navigation {
        background: var(--accent-teal);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease;
        font-weight: 500;
        min-width: 120px;
        width: 100%;
        margin-bottom: 1rem;
      }

      .btn-navigation:hover {
        background: var(--secondary-blue);
        transform: translateY(-2px);
      }

      .btn-navigation:disabled {
        background: #e2e8f0;
        color: #64748b;
        cursor: not-allowed;
        transform: none;
      }

      .review-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        width: 100%;
      }

      .review-section h6 {
        color: var(--primary-blue);
        font-weight: 600;
        margin-bottom: 1rem;
      }

      .review-section p {
        margin-bottom: 1rem;
        line-height: 1.6;
      }

      .form-row {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1rem;
      }

      .form-group {
        width: 100%;
      }

      @media (max-width: 768px) {
        .sidebar {
          width: 100%;
          position: relative;
          min-height: auto;
          box-shadow: none;
        }

        .main-content {
          margin-left: 0;
          padding: 1rem;
          width: 100%;
        }

        .step {
          padding: 0.75rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('../../partials/patientSidebar') %>

        <div class="main-content">
          <div class="card">
            <div class="card-header">
              <h4 class="mb-0">Complete Your Registration</h4>
            </div>
            <div class="card-body">
              <div class="step-indicator">
                <div class="step active" id="step1-indicator">1. Personal Information</div>
                <div class="step" id="step2-indicator">2. Contact Details</div>
                <div class="step" id="step3-indicator">3. Medical History</div>
                <div class="step" id="step4-indicator">4. Review & Submit</div>
              </div>

              <form id="registrationForm">
                <!-- Step 1: Personal Information -->
                <div class="form-step active" id="step1">
                  <h5 class="mb-4" style="color: var(--primary-blue)">Personal Information</h5>
                  <div class="form-row">
                    <div class="form-group">
                      <label for="firstName" class="form-label">First Name</label>
                      <input type="text" class="form-control" id="firstName" required>
                    </div>
                    <div class="form-group">
                      <label for="lastName" class="form-label">Last Name</label>
                      <input type="text" class="form-control" id="lastName" required>
                    </div>
                    <div class="form-group">
                      <label for="gender" class="form-label">Gender</label>
                      <select class="form-select" id="gender" required>
                        <option value="">Select Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="dob" class="form-label">Date of Birth</label>
                      <input type="date" class="form-control" id="dob" required>
                    </div>
                  </div>
                </div>

                <!-- Step 2: Contact Details -->
                <div class="form-step" id="step2">
                  <h5 class="mb-4" style="color: var(--primary-blue)">Contact Details</h5>
                  <div class="form-row">
                    <div class="form-group">
                      <label for="phone" class="form-label">Phone Number</label>
                      <input type="tel" class="form-control" id="phone" required>
                    </div>
                    <div class="form-group">
                      <label for="email" class="form-label">Email</label>
                      <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="form-group">
                      <label for="address" class="form-label">Address</label>
                      <input type="text" class="form-control" id="address" required>
                    </div>
                    <div class="form-group">
                      <label for="city" class="form-label">City</label>
                      <input type="text" class="form-control" id="city" required>
                    </div>
                    <div class="form-group">
                      <label for="state" class="form-label">State</label>
                      <input type="text" class="form-control" id="state" required>
                    </div>
                  </div>
                </div>

                <!-- Step 3: Medical History -->
                <div class="form-step" id="step3">
                  <h5 class="mb-4" style="color: var(--primary-blue)">Medical History</h5>
                  <div class="form-row">
                    <div class="form-group">
                      <label for="allergies" class="form-label">Allergies</label>
                      <textarea class="form-control" id="allergies" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="conditions" class="form-label">Existing Medical Conditions</label>
                      <textarea class="form-control" id="conditions" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="medications" class="form-label">Current Medications</label>
                      <textarea class="form-control" id="medications" rows="3"></textarea>
                    </div>
                  </div>
                </div>

                <!-- Step 4: Review & Submit -->
                <div class="form-step" id="step4">
                  <h5 class="mb-4" style="color: var(--primary-blue)">Review Your Information</h5>
                  <div class="review-section">
                    <h6>Personal Information</h6>
                    <p id="review-personal"></p>
                  </div>
                  <div class="review-section">
                    <h6>Contact Details</h6>
                    <p id="review-contact"></p>
                  </div>
                  <div class="review-section">
                    <h6>Medical History</h6>
                    <p id="review-medical"></p>
                  </div>
                </div>

                <!-- Navigation Buttons -->
                <div class="d-flex flex-column">
                  <button type="button" class="btn btn-navigation" id="prevButton" style="display: none;">Previous</button>
                  <button type="button" class="btn btn-navigation" id="nextButton">Next</button>
                  <button type="submit" class="btn btn-navigation" id="submitButton" style="display: none;">Submit Registration</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        let currentStep = 1;
        const totalSteps = 4;
        const form = document.getElementById('registrationForm');
        const prevButton = document.getElementById('prevButton');
        const nextButton = document.getElementById('nextButton');
        const submitButton = document.getElementById('submitButton');

        // Pre-fill form with dummy data
        const dummyData = {
          firstName: 'Ayush',
          lastName: 'Raj',
          gender: 'male',
          dob: '1990-01-01',
          phone: '123-456-7890',
          email: 'ayush.raj@example.com',
          address: '123 Main St',
          city: 'New York',
          state: 'NY',
          allergies: 'None',
          conditions: 'Hypertension',
          medications: 'Lisinopril 10mg daily'
        };

        // Fill form with dummy data
        Object.keys(dummyData).forEach(key => {
          const element = document.getElementById(key);
          if (element) {
            element.value = dummyData[key];
          }
        });

        function showStep(stepNumber) {
          // Hide all steps
          document.querySelectorAll('.form-step').forEach(step => {
            step.classList.remove('active');
          });

          // Show current step
          document.getElementById(`step${stepNumber}`).classList.add('active');

          // Update step indicators
          document.querySelectorAll('.step').forEach((step, index) => {
            step.classList.remove('active', 'completed');
            if (index + 1 === stepNumber) {
              step.classList.add('active');
            } else if (index + 1 < stepNumber) {
              step.classList.add('completed');
            }
          });

          // Update button visibility
          prevButton.style.display = stepNumber > 1 ? 'block' : 'none';
          nextButton.style.display = stepNumber < totalSteps ? 'block' : 'none';
          submitButton.style.display = stepNumber === totalSteps ? 'block' : 'none';

          // Update review section
          if (stepNumber === totalSteps) {
            updateReviewSection();
          }
        }

        function updateReviewSection() {
          const personalInfo = `
            Name: ${document.getElementById('firstName').value} ${document.getElementById('lastName').value}<br>
            Gender: ${document.getElementById('gender').value}<br>
            Date of Birth: ${document.getElementById('dob').value}
          `;
          const contactInfo = `
            Phone: ${document.getElementById('phone').value}<br>
            Email: ${document.getElementById('email').value}<br>
            Address: ${document.getElementById('address').value}, ${document.getElementById('city').value}, ${document.getElementById('state').value}
          `;
          const medicalInfo = `
            Allergies: ${document.getElementById('allergies').value}<br>
            Conditions: ${document.getElementById('conditions').value}<br>
            Medications: ${document.getElementById('medications').value}
          `;

          document.getElementById('review-personal').innerHTML = personalInfo;
          document.getElementById('review-contact').innerHTML = contactInfo;
          document.getElementById('review-medical').innerHTML = medicalInfo;
        }

        // Event listeners
        prevButton.addEventListener('click', () => {
          if (currentStep > 1) {
            currentStep--;
            showStep(currentStep);
          }
        });

        nextButton.addEventListener('click', () => {
          if (currentStep < totalSteps) {
            currentStep++;
            showStep(currentStep);
          }
        });

        form.addEventListener('submit', (e) => {
          e.preventDefault();
          // Here you would typically send the form data to the server
          alert('Registration submitted successfully!');
        });

        // Initialize first step
        showStep(1);
      });
    </script>
  </body>
</html>
