<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-12">
      <div class="card card-medical">
        <div class="card-body">
          <h5 class="card-title">Appointment Management</h5>
          
          <!-- Notifications -->
          <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <div>You have 3 pending appointment requests that need your attention.</div>
          </div>

          <!-- Search and Filter -->
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="search-container">
                <i class="fas fa-search"></i>
                <input type="text" class="form-control search-input" placeholder="Search appointments...">
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex justify-content-end">
                <div class="dropdown me-2">
                  <button class="btn btn-outline-medical dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown">
                    <i class="fas fa-filter me-2"></i>Filter
                  </button>
                  <div class="dropdown-menu filter-dropdown">
                    <div class="form-check mb-2">
                      <input class="form-check-input" type="checkbox" id="pendingFilter" checked>
                      <label class="form-check-label" for="pendingFilter">Pending</label>
                    </div>
                    <div class="form-check mb-2">
                      <input class="form-check-input" type="checkbox" id="approvedFilter" checked>
                      <label class="form-check-label" for="approvedFilter">Approved</label>
                    </div>
                    <div class="form-check mb-2">
                      <input class="form-check-input" type="checkbox" id="completedFilter">
                      <label class="form-check-label" for="completedFilter">Completed</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="rejectedFilter">
                      <label class="form-check-label" for="rejectedFilter">Rejected</label>
                    </div>
                  </div>
                </div>
                <button class="btn btn-medical">
                  <i class="fas fa-plus me-2"></i>New Appointment
                </button>
              </div>
            </div>
          </div>

          <!-- Appointment List -->
          <div class="row">
            <div class="col-md-6">
              <h6 class="mb-3">Pending Appointments</h6>
              <div class="appointment-list">
                <!-- Pending Appointment Card -->
                <div class="card appointment-card mb-3">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <h6 class="mb-0">Robert Davis</h6>
                      <span class="badge status-pending">Pending</span>
                    </div>
                    <p class="text-muted mb-2">
                      <i class="far fa-calendar me-2"></i>Mar 22, 2025
                      <i class="far fa-clock ms-3 me-2"></i>1:00 - 2:00 PM
                    </p>
                    <p class="mb-2">
                      <i class="fas fa-stethoscope me-2"></i>Follow-up Consultation
                    </p>
                    <div class="d-flex justify-content-end">
                      <button class="btn btn-sm btn-success me-2">
                        <i class="fas fa-check me-1"></i>Approve
                      </button>
                      <button class="btn btn-sm btn-danger me-2">
                        <i class="fas fa-times me-1"></i>Reject
                      </button>
                      <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#rescheduleModal" data-patient="Robert Davis" data-date="Mar 22, 2025" data-time="1:00 - 2:00 PM">
                        <i class="fas fa-sync-alt me-1"></i>Reschedule
                      </button>
                    </div>
                  </div>
                </div>
                <!-- More pending appointments would go here -->
              </div>
            </div>
            
            <div class="col-md-6">
              <h6 class="mb-3">Rejected Appointments</h6>
              <div class="appointment-list">
                <!-- Rejected Appointment Card -->
                <div class="card appointment-card mb-3">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <h6 class="mb-0">Michael Brown</h6>
                      <span class="badge status-rejected">Rejected</span>
                    </div>
                    <p class="text-muted mb-2">
                      <i class="far fa-calendar me-2"></i>Mar 20, 2025
                      <i class="far fa-clock ms-3 me-2"></i>10:00 - 11:00 AM
                    </p>
                    <p class="mb-2">
                      <i class="fas fa-stethoscope me-2"></i>Initial Consultation
                    </p>
                    <div class="d-flex justify-content-end">
                      <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#rescheduleModal" data-patient="Michael Brown" data-date="Mar 20, 2025" data-time="10:00 - 11:00 AM">
                        <i class="fas fa-sync-alt me-1"></i>Reschedule
                      </button>
                    </div>
                  </div>
                </div>
                <!-- More rejected appointments would go here -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Reschedule Modal -->
<div class="modal fade" id="rescheduleModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Reschedule Appointment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label class="form-label">Patient</label>
            <input type="text" class="form-control" id="patientName" readonly>
          </div>
          <div class="mb-3">
            <label class="form-label">Current Date & Time</label>
            <input type="text" class="form-control" id="currentDateTime" readonly>
          </div>
          <div class="mb-3">
            <label class="form-label">New Date</label>
            <input type="date" class="form-control" id="newDate">
          </div>
          <div class="mb-3">
            <label class="form-label">New Time</label>
            <select class="form-select" id="newTime">
              <option>9:00 - 10:00 AM</option>
              <option>10:00 - 11:00 AM</option>
              <option>11:00 - 12:00 PM</option>
              <option>1:00 - 2:00 PM</option>
              <option>2:00 - 3:00 PM</option>
              <option>3:00 - 4:00 PM</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-medical">Confirm Reschedule</button>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize reschedule modal
  const rescheduleModal = document.getElementById('rescheduleModal');
  if (rescheduleModal) {
    rescheduleModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const patient = button.getAttribute('data-patient');
      const date = button.getAttribute('data-date');
      const time = button.getAttribute('data-time');
      
      const modalTitle = rescheduleModal.querySelector('.modal-title');
      const patientInput = rescheduleModal.querySelector('#patientName');
      const currentDateTime = rescheduleModal.querySelector('#currentDateTime');
      
      patientInput.value = patient;
      currentDateTime.value = `${date} ${time}`;
    });
  }
</script> 