      .nav-link:hover, .nav-link.active {
        background: rgba(255, 255, 255, 0.1);
        color: white;
      }

      .nav-link i {
        margin-right: 10px;
      }

      .health-metric {
        height: 6px;
        border-radius: 3px;
      }

      .risk-badge-high {
        background-color: var(--high-risk);
        color: white;
      }

      .risk-badge-medium {
        background-color: var(--medium-risk);
        color: black;
      }

      .risk-badge-low {
        background-color: var(--low-risk);
        color: white;
      }

