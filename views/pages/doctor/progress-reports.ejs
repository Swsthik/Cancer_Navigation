      .report-card {
        border-left: 4px solid var(--accent-teal);
      }

      .report-timeline {
        position: relative;
        padding-left: 30px;
      }

      .report-timeline::before {
        content: '';
        position: absolute;
        left: 10px;
        top: 0;
        bottom: 0;
        width: 2px;
        background-color: var(--secondary-blue);
      }

      .timeline-item {
        position: relative;
        margin-bottom: 30px;
      }

      .timeline-item::before {
        content: '';
        position: absolute;
        left: -30px;
        top: 0;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background-color: var(--accent-teal);
      }

      .chart-container {
        height: 300px;
        width: 100%;
      }

      .metric-card {
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
        background-color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
