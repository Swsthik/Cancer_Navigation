            <div class="mb-3">
              <label for="imageType" class="form-label">Image Type</label>
              <select class="form-select" id="imageType" required>
                <option value="" selected disabled>Select image type</option>
                <option value="ct">CT Scan</option>
                <option value="mri">MRI</option>
                <option value="xray">X-Ray</option>
                <option value="ultrasound">Ultrasound</option>
                <option value="mammogram">Mammogram</option>
                <option value="pet">PET Scan</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="imageRegion" class="form-label">Body Region</label>
              <input type="text" class="form-control" id="imageRegion" placeholder="e.g., Chest, Breast, Abdomen">
            </div>
            <div class="mb-3">
              <label for="imageFindings" class="form-label">Findings</label>
              <textarea class="form-control" id="imageFindings" rows="3" placeholder="Enter radiologist's findings"></textarea>
            </div>
            <div class="mb-3">
              <label for="imageFile" class="form-label">Upload Image</label>
              <input class="form-control" type="file" id="imageFile" accept="image/*,.dcm">
              <div class="form-text">Accepted formats: JPEG, PNG, DICOM (Max size: 20MB)</div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-medical">Upload Image</button>
          </div>
        </div>
      </div>
    </div>

    <div class="decorative-wave"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Handle custom date range for report generation
        const reportPeriod = document.getElementById('reportPeriod');
        const customDateRange = document.getElementById('customDateRange');
        
        if(reportPeriod) {
          reportPeriod.addEventListener('change', function() {
            customDateRange.style.display = this.value === 'custom' ? 'block' : 'none';
          });
        }
        
        // Handle view image modal
        const viewImageModal = document.getElementById('viewImageModal');
        if(viewImageModal) {
          viewImageModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            const imageType = button.getAttribute('data-image-type');
            const imageDate = button.getAttribute('data-image-date');
            
            document.getElementById('imageTitle').textContent = `${imageType} - ${imageDate}`;
            
            // Set different notes based on image type
            let notes = '';
            if(imageType === 'CT Scan') {
              notes = 'Comparison with previous imaging from January 20, 2025 shows approximately 20% reduction in the size of the primary left breast mass, now measuring 2.8cm (previously 3.5cm). There is also reduction in the size of involved axillary lymph nodes. No evidence of distant metastatic disease in chest, abdomen, or pelvis.';
            } else if(imageType === 'MRI') {
              notes = 'There is a 3.5cm irregular mass in the left breast at the 2 o\'clock position, approximately 4cm from the nipple. The mass demonstrates rapid enhancement and washout kinetics, suspicious for malignancy. Multiple axillary lymph nodes are enlarged with loss of fatty hilum, consistent with metastatic involvement.';
            } else if(imageType === 'Mammogram') {
              notes = 'There is a 3.5cm irregular, high-density mass with spiculated margins in the left breast at the 2 o\'clock position. Associated architectural distortion and microcalcifications are present. The right breast appears normal.';
            }
            
            document.getElementById('imageNotes').textContent = notes;
          });
        }
        
        // Create charts
        if(typeof Chart !== 'undefined') {
          // Metrics Chart
          const metricsCtx = document.getElementById('metricsChart');
          if(metricsCtx) {
            new Chart(metricsCtx, {
              type: 'line',
              data: {
                labels: ['Jan 15', 'Feb 05', 'Feb 26', 'Mar 10'],
                datasets: [
                  {
                    label: 'WBC (K/μL)',
                    data: [5.2, 4.8, 4.2, 3.8],
                    borderColor: '#2a5c82',
                    backgroundColor: 'rgba(42, 92, 130, 0.1)',
                    tension: 0.1
                  },
                  {
                    label: 'Hemoglobin (g/dL)',
                    data: [13.5, 12.1, 11.0, 10.2],
                    borderColor: '#5c9baf',
                    backgroundColor: 'rgba(92, 155, 175, 0.1)',
                    tension: 0.1
                  },
                  {
                    label: 'Tumor Markers (CA 15-3)',
                    data: [58, 52, 48, 42],
                    borderColor: '#dc3545',
                    backgroundColor: 'rgba(220, 53, 69, 0.1)',
                    tension: 0.1
                  }
                ]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  title: {
                    display: true,
                    text: 'Key Health Metrics Trend'
                  }
                },
                scales: {
                  y: {
                    beginAtZero: false
                  }
                }
              }
            });
          }
          
          // Treatment Response Chart
          const treatmentResponseCtx = document.getElementById('treatmentResponseChart');
          if(treatmentResponseCtx) {
            new Chart(treatmentResponseCtx, {
              type: 'line',
              data: {
                labels: ['Jan 15', 'Feb 05', 'Feb 26', 'Mar 10'],
                datasets: [
                  {
                    label: 'Tumor Size (cm)',
                    data: [3.5, 3.2, 3.0, 2.8],
                    borderColor: '#dc3545',
                    backgroundColor: 'rgba(220, 53, 69, 0.1)',
                    tension: 0.1,
                    yAxisID: 'y'
                  },
                  {
                    label: 'CA 15-3 (U/mL)',
                    data: [58, 52, 48, 42],
                    borderColor: '#5c9baf',
                    backgroundColor: 'rgba(92, 155, 175, 0.1)',
                    tension: 0.1,
                    yAxisID: 'y1'
                  }
                ]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  title: {
                    display: true,
                    text: 'Treatment Response Metrics'
                  }
                },
                scales: {
                  y: {
                    type: 'linear',
                    display: true,
                    position: 'left',
                    title: {
                      display: true,
                      text: 'Tumor Size (cm)'
                    }
                  },
                  y1: {
                    type: 'linear',
                    display: true,
                    position: 'right',
                    title: {
                      display: true,
                      text: 'CA 15-3 (U/mL)'
                    },
                    grid: {
                      drawOnChartArea: false
                    }
                  }
                }
              }
            });
          }
          
          // Side Effects Chart
          const sideEffectsCtx = document.getElementById('sideEffectsChart');
          if(sideEffectsCtx) {
            new Chart(sideEffectsCtx, {
              type: 'radar',
              data: {
                labels: ['Nausea', 'Fatigue', 'Hair Loss', 'Peripheral Neuropathy', 'Anemia'],
                datasets: [
                  {
                    label: 'Cycle 1',
                    data: [2, 3, 2, 1, 1],
                    borderColor: '#2a5c82',
                    backgroundColor: 'rgba(42, 92, 130, 0.2)',
                  },
                  {
                    label: 'Cycle 2',
                    data: [3, 4, 4, 2, 2],
                    borderColor: '#5c9baf',
                    backgroundColor: 'rgba(92, 155, 175, 0.2)',
                  }
                ]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                  r: {
                    min: 0,
                    max: 5,
                    ticks: {
                      stepSize: 1
                    }
                  }
                }
              }
            });
          }
          
          // Quality of Life Chart
          const qualityOfLifeCtx = document.getElementById('qualityOfLifeChart');
          if(qualityOfLifeCtx) {
            new Chart(qualityOfLifeCtx, {
              type: 'bar',
              data: {
                labels: ['Physical', 'Emotional', 'Social', 'Functional'],
                datasets: [
                  {
                    label: 'Baseline',
                    data: [8, 7, 8, 9],
                    backgroundColor: '#2a5c82',
                  },
                  {
                    label: 'Current',
                    data: [6, 5, 7, 7],
                    backgroundColor: '#5c9baf',
                  }
                ]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                  y: {
                    beginAtZero: true,
                    max: 10,
                    title: {
                      display: true,
                      text: 'Score (0-10)'
                    }
                  }
                }
              }
            });
          }
          
          // Lab Results Chart
          const labResultsCtx = document.getElementById('labResultsChart');
          if(labResultsCtx) {
            new Chart(labResultsCtx, {
              type: 'line',
              data: {
                labels: ['Jan 15', 'Feb 05', 'Feb 26', 'Mar 10'],
                datasets: [
                  {
                    label: 'WBC (K/μL)',
                    data: [5.2, 4.8, 4.2, 3.8],
                    borderColor: '#2a5c82',
                    backgroundColor: 'rgba(42, 92, 130, 0.1)',
                    tension: 0.1
                  },
                  {
                    label: 'Hemoglobin (g/dL)',
                    data: [13.5, 12.1, 11.0, 10.2],
                    borderColor: '#5c9baf',
                    backgroundColor: 'rgba(92, 155, 175, 0.1)',
                    tension: 0.1
                  },
                  {
                    label: 'Platelets (K/μL)',
                    data: [210, 180, 160, 145],
                    borderColor: '#4ecdc4',
                    backgroundColor: 'rgba(78, 205, 196, 0.1)',
                    tension: 0.1
                  },
                  {
                    label: 'Neutrophils (K/μL)',
                    data: [3.1, 2.8, 2.4, 2.1],
                    borderColor: '#ffc107',
                    backgroundColor: 'rgba(255, 193, 7, 0.1)',
                    tension: 0.1
                  }
                ]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  title: {
                    display: true,
                    text: 'Blood Count Trends'
                  }
                }
              }
            });
          }
          
          // Response Prediction Chart
          const responsePredictionCtx = document.getElementById('responsePredictionChart');
          if(responsePredictionCtx) {
            new Chart(responsePredictionCtx, {
              type: 'doughnut',
              data: {
                labels: ['Partial Response', 'Complete Response', 'Stable Disease', 'Progressive Disease'],
                datasets: [
                  {
                    data: [70, 15, 12, 3],
                    backgroundColor: ['#4ecdc4', '#28a745', '#ffc107', '#dc3545'],
                  }
                ]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  title: {
                    display: true,
                    text: 'Predicted Treatment Outcome'
                  }
                }
              }
            });
          }
          
          // Risk Prediction Chart
          const riskPredictionCtx = document.getElementById('riskPredictionChart');
          if(riskPredictionCtx) {
            new Chart(riskPredictionCtx, {
              type: 'radar',
              data: {
                labels: ['Recurrence Risk', 'Metastasis Risk', 'Treatment Resistance', 'Side Effect Severity', 'Complication Risk'],
                datasets: [
                  {
                    label: 'Patient Risk Profile',
                    data: [7, 6, 4, 5, 5],
                    borderColor: '#dc3545',
                    backgroundColor: 'rgba(220, 53, 69, 0.2)',
                  },
                  {
                    label: 'Average for Similar Cases',
                    data: [5, 4, 3, 4, 3],
                    borderColor: '#5c9baf',
                    backgroundColor: 'rgba(92, 155, 175, 0.2)',
                  }
                ]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                  r: {
                    min: 0,
                    max: 10,
                    ticks: {
                      stepSize: 2
                    }
                  }
                }
              }
            });
          }
          
          // Survival Prediction Chart
          const survivalPredictionCtx = document.getElementById('survivalPredictionChart');
          if(survivalPredictionCtx) {
            new Chart(survivalPredictionCtx, {
              type: 'line',
              data: {
                labels: ['1 Year', '2 Years', '3 Years', '4 Years', '5 Years'],
                datasets: [
                  {
                    label: 'Disease-Free Survival',
                    data: [95, 90, 85, 80, 75],
                    borderColor: '#4ecdc4',
                    backgroundColor: 'rgba(78, 205, 196, 0.1)',
                    tension: 0.1
                  },
                  {
                    label: 'Overall Survival',
                    data: [98, 95, 90, 86, 82],
                    borderColor: '#2a5c82',
                    backgroundColor: 'rgba(42, 92, 130, 0.1)',
                    tension: 0.1
                  }
                ]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  title: {
                    display: true,
                    text: 'Predicted Survival Rates'
                  }
                },
                scales: {
                  y: {
                    min: 50,
                    max: 100,
                    title: {
                      display: true,
                      text: 'Probability (%)'
                    }
                  }
                }
              }
            });
          }
        }
      });
    </script>
  </body>
</html>

