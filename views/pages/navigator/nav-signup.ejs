<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MedConnect - Patient Care Navigator Signup</title>
  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#2a5c82',
            secondary: '#4ecdc4',
          }
        }
      }
    }
  </script>
</head>
<body class="min-h-screen bg-gradient-to-br from-[#f8f9fa] to-[#e9ecef]">
  <!-- Navigation Bar -->
  <nav class="bg-primary py-3 px-4 shadow-md">
    <div class="container mx-auto flex justify-between items-center">
      <a href="/" class="text-white flex items-center gap-2 text-xl font-semibold">
        <i class="fas fa-hospital"></i>
        MedConnect
      </a>
      <a href="/login" class="text-white hover:text-secondary transition-colors">
        <i class="fas fa-sign-in-alt me-2"></i>Login
      </a>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mx-auto py-8 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="bg-white rounded-lg shadow-xl overflow-hidden">
        <div class="flex flex-col md:flex-row">
          <!-- Left Sidebar -->
          <div class="hidden md:block bg-primary md:w-1/3 p-6 text-white">
            <div class="h-full flex flex-col justify-center">
              <h2 class="text-2xl font-bold mb-4">Join Our Care Team</h2>
              <p class="mb-6 text-white/90">
                Create your Patient Care Navigator account to help guide patients through their healthcare journey.
              </p>
              <div class="space-y-4">
                <div class="flex items-center gap-3">
                  <i class="fas fa-check-circle text-secondary"></i>
                  <span>Coordinate patient care</span>
                </div>
                <div class="flex items-center gap-3">
                  <i class="fas fa-check-circle text-secondary"></i>
                  <span>Manage care plans</span>
                </div>
                <div class="flex items-center gap-3">
                  <i class="fas fa-check-circle text-secondary"></i>
                  <span>Facilitate communication</span>
                </div>
                <div class="flex items-center gap-3">
                  <i class="fas fa-check-circle text-secondary"></i>
                  <span>Support patient needs</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Form Section -->
          <div class="md:w-2/3 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-center mb-6">Patient Care Navigator Registration</h2>
            <form id="pcnSignupForm">
              <!-- Personal Information -->
              <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">Personal Information</h3>
                <div class="mb-4 flex justify-center">
                  <div class="relative">
                    <div class="rounded-full bg-gray-100 flex items-center justify-center w-24 h-24 mb-2 overflow-hidden" id="profilePreview">
                      <i class="fas fa-user-nurse text-gray-400 text-4xl"></i>
                    </div>
                    <input
                      type="file"
                      id="profilePic"
                      accept="image/*"
                      class="sr-only"
                    />
                    <label
                      for="profilePic"
                      class="absolute bottom-0 right-0 bg-secondary text-white p-1 rounded-full cursor-pointer hover:bg-opacity-80 transition-colors"
                    >
                      <i class="fas fa-camera"></i>
                    </label>
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                  <div>
                    <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name*</label>
                    <input
                      id="firstName"
                      name="firstName"
                      type="text"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                  <div>
                    <label for="middleName" class="block text-sm font-medium text-gray-700 mb-1">Middle Name</label>
                    <input
                      id="middleName"
                      name="middleName"
                      type="text"
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name*</label>
                    <input
                      id="lastName"
                      name="lastName"
                      type="text"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                </div>

                <div class="mb-4">
                  <label for="residingAddress" class="block text-sm font-medium text-gray-700 mb-1">Residing Address*</label>
                  <textarea
                    id="residingAddress"
                    name="residingAddress"
                    required
                    class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    rows="2"
                  ></textarea>
                </div>

                <div class="mb-4">
                  <label for="currentAddress" class="block text-sm font-medium text-gray-700 mb-1">Current Address (if different)</label>
                  <textarea
                    id="currentAddress"
                    name="currentAddress"
                    class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    rows="2"
                  ></textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                  <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address*</label>
                    <input
                      id="email"
                      name="email"
                      type="email"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                  <div>
                    <label for="primaryPhone" class="block text-sm font-medium text-gray-700 mb-1">Primary Phone*</label>
                    <input
                      id="primaryPhone"
                      name="primaryPhone"
                      type="tel"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label for="secondaryPhone" class="block text-sm font-medium text-gray-700 mb-1">Secondary Phone</label>
                    <input
                      id="secondaryPhone"
                      name="secondaryPhone"
                      type="tel"
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                  <div>
                    <label for="ssn" class="block text-sm font-medium text-gray-700 mb-1">SSN (Optional)</label>
                    <input
                      id="ssn"
                      name="ssn"
                      type="text"
                      placeholder="XXX-XX-XXXX"
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                </div>
              </div>

              <!-- Professional Information -->
              <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">Professional Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                  <div>
                    <label for="role" class="block text-sm font-medium text-gray-700 mb-1">Role/Title*</label>
                    <input
                      id="role"
                      name="role"
                      type="text"
                      placeholder="e.g., Patient Care Navigator"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                  <div>
                    <label for="employer" class="block text-sm font-medium text-gray-700 mb-1">Employer/Organization*</label>
                    <input
                      id="employer"
                      name="employer"
                      type="text"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                  <div>
                    <label for="certType" class="block text-sm font-medium text-gray-700 mb-1">Certification Type*</label>
                    <select
                      id="certType"
                      name="certType"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    >
                      <option value="">Select Certification Type</option>
                      <option value="COPN">COPN by NCBC</option>
                      <option value="CCN">CCN by ONS</option>
                      <option value="CPO-N">CPO-N by PACB</option>
                      <option value="CPN">CPN by APPA</option>
                      <option value="BCPA">BCPA by PACB</option>
                      <option value="CPPN">CPPN by NAPAC</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                  <div>
                    <label for="certification" class="block text-sm font-medium text-gray-700 mb-1">Certification Details*</label>
                    <input
                      id="certification"
                      name="certification"
                      type="text"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                  <div>
                    <label for="degree" class="block text-sm font-medium text-gray-700 mb-1">Degree(s)</label>
                    <input
                      id="degree"
                      name="degree"
                      type="text"
                      placeholder="e.g., BSN, MSW"
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                  <div>
                    <label for="experience" class="block text-sm font-medium text-gray-700 mb-1">Years of Experience*</label>
                    <input
                      id="experience"
                      name="experience"
                      type="number"
                      min="0"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label for="licenseNumber" class="block text-sm font-medium text-gray-700 mb-1">License Number (if applicable)</label>
                    <input
                      id="licenseNumber"
                      name="licenseNumber"
                      type="text"
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                  <div>
                    <label for="officeLocation" class="block text-sm font-medium text-gray-700 mb-1">Office/Practice Location</label>
                    <input
                      id="officeLocation"
                      name="officeLocation"
                      type="text"
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                </div>
              </div>

              <!-- Language & Specialties -->
              <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">Language & Specialties</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                  <div>
                    <label for="primaryLanguage" class="block text-sm font-medium text-gray-700 mb-1">Primary Language*</label>
                    <select
                      id="primaryLanguage"
                      name="primaryLanguage"
                      required
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    >
                      <option value="">Select Language</option>
                      <option value="English">English</option>
                      <option value="Spanish">Spanish</option>
                      <option value="French">French</option>
                      <option value="Mandarin">Mandarin</option>
                      <option value="Arabic">Arabic</option>
                      <option value="Hindi">Hindi</option>
                      <option value="Other">Other</option>
                    </select>
                  </div>
                  <div>
                    <label for="otherLanguages" class="block text-sm font-medium text-gray-700 mb-1">Other Languages</label>
                    <input
                      id="otherLanguages"
                      name="otherLanguages"
                      type="text"
                      placeholder="e.g., Spanish, French"
                      class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-secondary"
                    />
                  </div>
                </div>

                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-2">Areas of Specialty*</label>
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-oncology"
                        name="specialty"
                        value="Oncology"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-oncology" class="ml-2 text-sm">Oncology</label>
                    </div>
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-geriatrics"
                        name="specialty"
                        value="Geriatrics"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-geriatrics" class="ml-2 text-sm">Geriatrics</label>
                    </div>
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-mental-health"
                        name="specialty"
                        value="Mental Health"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-mental-health" class="ml-2 text-sm">Mental Health</label>
                    </div>
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-chronic"
                        name="specialty"
                        value="Chronic Disease Management"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-chronic" class="ml-2 text-sm">Chronic Disease Management</label>
                    </div>
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-pediatrics"
                        name="specialty"
                        value="Pediatrics"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-pediatrics" class="ml-2 text-sm">Pediatrics</label>
                    </div>
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-cardiology"
                        name="specialty"
                        value="Cardiology"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-cardiology" class="ml-2 text-sm">Cardiology</label>
                    </div>
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-neurology"
                        name="specialty"
                        value="Neurology"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-neurology" class="ml-2 text-sm">Neurology</label>
                    </div>
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-diabetes"
                        name="specialty"
                        value="Diabetes Care"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-diabetes" class="ml-2 text-sm">Diabetes Care</label>
                    </div>
                    <div class="flex items-start">
                      <input
                        type="checkbox"
                        id="specialty-palliative"
                        name="specialty"
                        value="Palliative Care"
                        class="mt-1 rounded text-secondary focus:ring-secondary"
                      />
                      <label for="specialty-palliative" class="ml-2 text-sm">Palliative Care</label>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Agreements -->
              <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">Agreements</h3>
                <div class="space-y-3">
                  <div class="flex items-start space-x-2">
                    <input 
                      type="checkbox" 
                      id="termsAccepted" 
                      name="termsAccepted" 
                      required
                      class="mt-1 rounded text-secondary focus:ring-secondary"
                    />
                    <label for="termsAccepted" class="text-sm">
                      I agree to the 
                      <a href="#" class="text-secondary hover:underline">
                        Terms and Conditions
                      </a>*
                    </label>
                  </div>
                  <div class="flex items-start space-x-2">
                    <input 
                      type="checkbox" 
                      id="privacyAccepted" 
                      name="privacyAccepted" 
                      required
                      class="mt-1 rounded text-secondary focus:ring-secondary"
                    />
                    <label for="privacyAccepted" class="text-sm">
                      I agree to the 
                      <a href="#" class="text-secondary hover:underline">
                        Privacy Policy
                      </a>*
                    </label>
                  </div>
                </div>
              </div>

              <button
                type="submit"
                class="w-full bg-secondary hover:bg-opacity-80 text-white font-medium py-3 rounded transition-colors"
              >
                Create Account
              </button>
              <p class="text-center mt-4 text-sm">
                Already have an account?
                <a href="/login" class="text-secondary hover:underline ml-1">
                  Sign In
                </a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Wave SVG Background -->
  <div class="fixed bottom-0 left-0 w-full pointer-events-none" style="z-index:-1">
    <svg viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg" class="w-full h-[150px]">
      <path fill="#2A5C82" fill-opacity="0.1" d="M0,160L48,170.7C96,181,192,203,288,186.7C384,171,480,117,576,101.3C672,85,768,107,864,138.7C960,171,1056,213,1152,208C1248,203,1344,149,1392,122.7L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
    </svg>
  </div>

  <script>
    document.getElementById('profilePic').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const preview = document.getElementById('profilePreview');
          preview.innerHTML = `<img src="${e.target.result}" alt="Profile Preview" class="w-full h-full object-cover">`;
        };
        reader.readAsDataURL(file);
      }
    });

    document.getElementById('pcnSignupForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const formData = new FormData(this);
      const formDataObj = {};
      
      // Handle specialty checkboxes which can have multiple values
      const specialties = [];
      document.querySelectorAll('input[name="specialty"]:checked').forEach(checkbox => {
        specialties.push(checkbox.value);
      });
      
      formData.forEach((value, key) => {
        if (key !== 'specialty') {
          formDataObj[key] = value;
        }
      });
      formDataObj.specialty = specialties;
      
      console.log('Form submitted:', formDataObj);
      // Here you would typically send the data to your server
      alert('Form submitted successfully!');
    });
  </script>
</body>
</html>
